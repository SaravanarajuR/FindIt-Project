    <link
      rel="canonical"
      href="https://getbootstrap.com/docs/5.1/examples/sign-in/"
    />

    <!-- Bootstrap core CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <style>
      :root {
        --red: #ff5a3c;
        --light-red: #f9edeb;
      }

      .frm {
        min-width: 60%;
        max-width: 95%;
        max-height: 80%;
        border: 0.1rem solid rgba(0, 0, 0, 0.2);
        background-color: #fff;
        padding: 40px 0 40px 10px;
        border-radius: 2%;
        overflow: hidden;
        border: 0.1rem solid rgba(0, 0, 0, 0.2);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
      }

      html,
      body {
        height: 100%;
      }

      body {
        min-width: 100%;
        min-height: 100%;
        background-color: var(--light-red);
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f5f5f5;
        font-family: "Nunito", sans-serif;
        box-sizing: border-box;
        outline: none;
        border: none;
        text-decoration: none;
      }

      .form-floating:focus-within {
        z-index: 2;
      }

      .head-text {
        color: black;
        font-style: bold;
        font-size: 2rem;
      }

      .top {
        margin-top: 30px;
        margin-bottom: -1px;
        border-bottom-right-radius: 0;
        border-bottom-left-radius: 0;
      }

      .middle {
        margin-top: 0;
        margin-bottom: 0;
        border-radius: 0;
      }

      .bottom {
        margin-bottom: 10px;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
      }

      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      .btn {
        display: inline-block;
        border-radius: 0.5rem;
        font-size: 1.2rem;
        color: var(--red);
        background: #fff;
        cursor: pointer;
        text-align: center;
        border: 1px solid black;
      }

      .btn:hover {
        background: var(--red);
        color: #fff;
      }

      .heading span {
        color: #ff5a3c;
        background: #fff;
        border-radius: 0.5rem;
        padding: 1.5rem 0.5rem;
      }

      .fail {
        padding: 1%;
        background-color: crimson;
        color: #f5f5f5;
        align-items: center;
        text-align: center;
        display: block;
      }

      .show {
        margin: 20px 0;
        width: 1.2rem;
        height: 1.2rem;
      }

      .error {
        position: absolue;
        bottom: 20px;
        left: 20px;
        background-color: #ff4444;
        padding: 10px 20px;
        border-radius: 20px;
        font-size: 1.5rem;
        color: white;
      }

      .text-center {
        padding-left: 40px;
        padding-right: 40px;
      }

      .success {
        visibility: hidden;
        display: block;
      }

      .captchaText {
        height: 100%;
        border-radius: 5px 0 0 5px;
        width: 40%;
        text-align: center;
        font-size: 1.3rem;
        text-decoration: line-through;
      }

      .captchaInput {
        width: 60%;
        border-radius: 0 5px 5px 0;
        height: 100%;
        border: 2px solid var(--red);
      }
      .captchaInput:focus {
        outline: none;
        border: 1px solid var(--red);
      }

      .captcha {
        height: 40px;
        margin: 10px auto;
        display: flex;
        width: 80%;
        justify-content: center;
      }

      @media (max-width: 991px) {
        .frm {
          width: 90%;
        }
      }
    </style>
  </head>

  <body class="top-body">
    <main class="frm">
      <h1 class="heading"><span>Create</span>Account</h1>
      <form action="/signup" method="post" id="form">
        <div class="form-div">
          <div class="text-center">
            <% if(m!='') { %>
            <button class="error" disabled><%= m[m.length-1] %></button>
            <% } %>
            <div class="form-floating">
              <input
                type="email"
                name="mail"
                class="form-control top"
                id="floatingInput"
                placeholder="name@example.com"
                required
              />
              <label for="floatingInput">Email address</label>
            </div>
            <div class="form-floating">
              <input
                type="Password"
                name="pass"
                class="form-control middle"
                minlength="8"
                id="floatingPassword"
                placeholder="Password"
                required
              />
              <label for="floatingPassword">Password</label>
            </div>
            <div class="form-floating">
              <input
                type="password"
                name="cpass"
                class="form-control bottom"
                minlength="8"
                placeholder="Password"
                id="floatingPass"
                required
              />
              <label for="floatingPassword">Confirm-password</label>
              <div style="text-align: center; align-items: center">
                <input class="show" type="checkbox" onclick="myFunction()" />
                Show Password
              </div>
            </div>

            <div class="captcha">
              <input class="captchaText" value="<%= captcha %>" disabled />
              <input
                class="captchaInput"
                type="text"
                id="captchaText"
                required
              />
            </div>
            <center>
              <button
                class="w-100 btn btn-lg btn-light"
                ID="signUpButton"
                name="signup-button"
                type="submit"
              >
                Sign Up
              </button>
            </center>
            <a
              style="color: black; font-weight: 700; margin-top: 10px"
              class="nav-link"
              href="/login"
              >Sign in instead</a
            >
            <h5 style="color: black; font-weight: 700" class="mt-5 mb-3">
              &copy; 2020â€“2022
            </h5>
          </div>
        </div>
      </form>
    </main>
    <script>
      function myFunction() {
        var x = document.getElementById("floatingPassword");
        var y = document.getElementById("floatingPass");
        if (x.type === "password") {
          x.type = y.type = "text";
        } else {
          x.type = y.type = "password";
        }
      }

      document.addEventListener("submit", (evt) => {
        evt.preventDefault();
        if ("<%=captcha%>" === document.getElementById("captchaText").value) {
          $("form").submit();
        } else {
          alert("Incorrect captcha");
        }
      });
    </script>
  </body>
</html>
