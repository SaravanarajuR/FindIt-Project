  <body class="text-center top-body">
    <main class="form-signin">
      <form action="/login" method="post">
        <div class="form-div">
          <% if(p!='') { %>
          <button class="error" disabled><%= p[p.length-1] %></button>
          <% } %>
          <h1 class="heading"><span>Welcome</span>Back</h1>

          <div class="form-floating">
            <input
              type="email"
              name="mail"
              class="form-control top"
              id="floatingInput"
              placeholder="name@example.com"
              required
            />
            <label for="floatingInput">Email address</label>
          </div>
          <div class="form-floating">
            <input
              minlength="8"
              type="Password"
              name="pass"
              class="form-control middle"
              id="floatingPassword"
              placeholder="Password"
              required
            />
            <label for="floatingPassword">Password</label>
            <input class="show" type="checkbox" onclick="myFunction()" /> Show
            Password
          </div>
          <div class="captcha">
            <input class="captchaText" value="<%= captcha %>" disabled />
            <input class="captchaInput" type="text" id="captchaText" required />
          </div>

          <button
            class="w-100 btn"
            ID="signUpButton"
            name="signup-button"
            type="submit"
          >
            Sign In
          </button>
          <div>
            <a
              style="color: black; font-weight: 700"
